<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="edu.nitt.vortex.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_events"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="2dp">

            <ImageView
                android:id="@+id/iv_events"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/events"
                android:tag="icon" />

            <edu.nitt.vortex.FontView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:tag="label"
                android:text="Events"
                android:textColor="#000000"
                android:textSize="25sp"
                app:type="regular" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_workshops"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="2dp">

            <ImageView
                android:id="@+id/iv_workshops"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/events"
                android:tag="icon" />

            <edu.nitt.vortex.FontView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:tag="label"
                android:text="Workshops"
                android:textColor="#000000"
                android:textSize="25sp"
                app:type="regular" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/ll_hospitality"
            android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_hospitality"
                    android:src="@mipmap/events"
                    android:tag="icon"
                    />

            <edu.nitt.vortex.FontView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                app:type="regular"
                android:textSize="25sp"
                android:tag="label"
                android:gravity="center"
                android:text="Hospitality"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="2dp"
            android:gravity="center"
            android:id="@+id/ll_contacts"
            android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_contacts"
                    android:tag="icon"
                    android:src="@mipmap/events"
                    />
            <edu.nitt.vortex.FontView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                app:type="regular"
                android:tag="label"
                android:textSize="25sp"
                android:gravity="center"
                android:text="Contacts"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
